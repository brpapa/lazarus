{
  "name": "@metis/server",
  "description": "GraphQL API",
  "author": "Bruno Papa <bruno.papa@hotmail.com>",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "16"
  },
  "scripts": {
    "clear": "npx rimraf ./dist",
    "build": "yarn run clear && tsc",
    "start": "yarn run build && node ./dist/index.js",
    "start:dev": "DEBUG='app:*' npx nodemon --watch \"src\" --ext \".js,.ts\" --exec \"ts-node src/index.js\"",
    "test": "DEBUG='app:*,test:*' npx jest --config \"jest.config.js\" --runInBand --detectOpenHandles",
    "test:cov": "yarn run test -- --coverage --no-cache",
    "test:watch": "yarn run test -- --watchAll",
    "lint": "npx eslint \"src\" --ext \".js,.ts\" --config \".eslintrc\"",
    "lint-and-fix": "yarn run lint -- --fix",
    "format": "prettier --config \"./../../.prettierrc\" --write \"{src,test}/**/*.{js,ts}\"",
    "typesync": "npx typesync",
    "update-schema": "npx ts-node ./scripts/update-schema.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run test && yarn run format && yarn run lint"
    }
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.31.0",
    "@aws-sdk/lib-storage": "^3.36.0",
    "@entria/graphql-mongoose-loader": "^4.3.2",
    "apollo-server-koa": "^2.18.2",
    "bcryptjs": "^2.4.3",
    "busboy": "^0.3.1",
    "core-js": "^3.6.5",
    "dataloader": "^2.0.0",
    "dotenv-safe": "^8.2.0",
    "fs-extra-promise": "^1.0.1",
    "graphql": "^15.5.2",
    "graphql-relay": "^0.8.0",
    "graphql-subscriptions": "^1.1.0",
    "isomorphic-fetch": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.13.0",
    "koa-bodyparser": "^4.3.0",
    "koa-compose": "^4.1.0",
    "koa-convert": "^2.0.0",
    "koa-graphql": "^0.8.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^9.4.0",
    "mongoose": "^5.10.9",
    "pretty-bytes": "^5.6.0",
    "pretty-error": "^2.1.1",
    "regenerator-runtime": "^0.13.7",
    "subscriptions-transport-ws": "^0.9.18",
    "winston": "^3.3.3"
  },
