{
  "entryPoint": "./index.js",
  "expo": {
    "name": "Lazarus",
    "owner": "brpapa",
    "slug": "lazarus",
    "privacy": "public",
    "description": "Nearby alerts tracking",
    "version": "1.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "orientation": "portrait",
    "jsEngine": "hermes",
    "sdkVersion": "44.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#fff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.lazarus.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Please enable this permission to receive accurate notifications about new incidents around you",
        "NSLocationWhenInUseUsageDescription": "Please enable this permission to view incidents nearby you",
        "NSCameraUsageDescription": "Please enable camera access so you can report incidents",
        "NSMicrophoneUsageDescription": "Please enable microphone access so you can report incidents",
        "UIBackgroundModes": [
          "location"
        ]
      }
    },
    "android": {
      "package": "com.lazarus.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "NOTIFICATIONS"
      ]
    },
    "extra": {
      "flipperHacker": "React Native packager is running"
    }
  }
}