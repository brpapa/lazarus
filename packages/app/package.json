{
  "name": "@metis/app",
  "description": "Mobile client",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "postinstall": "rm -rf ./node_modules/@metis/shared && mkdir -p ./node_modules/@metis/shared && rsync -avq ../shared/ ./node_modules/@metis/shared/ --exclude node_modules --exclude dist && npm install --prefix ./node_modules/@metis/shared",
    "debug": "METRO_SERVER_PORT=19000 open -a Flipper.app",
    "deps:sync-types": "npx typesync && npm install",
    "code:format": "prettier --config \"./../../.prettierrc\" --write \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "code:lint": "npx eslint 'src' --ext '.js,.ts' --config '.eslintrc'",
    "code:lint-and-fix": "npm run lint -- --fix",
    "start": "APP_ENV=prod expo start --clear",
    "start:local": "APP_ENV=local expo start --clear",
    "start:ios": "npm run start -- --ios",
    "start:ios:local": "npm run start:local -- --ios",
    "start:android": "npm run start -- --android",
    "expo:run:android": "npm run relay && expo run:android",
    "expo:run:ios": "npm run relay && expo run:ios --device \"iPhone 13\"",
    "expo:prebuild:ios": "expo prebuild --npm --platform ios",
    "expo:eject": "expo eject",
    "publish": "APP_ENV='prod' expo publish --clear",
    "run:android": "npm run relay && react-native run-android",
    "run:ios": "npm run relay && react-native run-ios",
    "relay": "npx relay-compiler --src ./src --schema ../api/graphql/schema.graphql --language typescript --artifactDirectory ./src/__generated__ --customScalars.Date=String",
    "relay:watch": "npm run relay -- --watch",
    "relay:clear": "find . -name '__generated__' -d -exec rm -rf '{}' +",
    "relay:flush": "npm run relay:clear && npm run relay"
  },
  "fig": {
    "postinstall": {
      "description": "Copy shared package to node_modules folder because reac native seems to not support local dependencies with symlink"
    },
    "start": {
      "description": "Starts a expo development server in your lan network"
    },
    "expo:run:*": {
      "description": "Build and run expo go in simulator, using expo-dev-client"
    },
    "run:*": {
      "description": "Build and run in simulator natively"
    },
    "expo:prebuild:ios": {
      "description": "Generate the native ios project before building them"
    },
    "relay": {
      "description": "Based on the current graphql schema defined by api, compile and generate new artifacts in src/__generated__ folder"
    }
  },
  "dependencies": {
    "@expo/vector-icons": "^12.0.0",
    "@metis/shared": "file:../shared",
    "@react-native-async-storage/async-storage": "~1.15.0",
    "@react-native-community/slider": "4.1.12",
    "@react-navigation/bottom-tabs": "^5.11.11",
    "@react-navigation/native": "^5.9.4",
    "@react-navigation/stack": "^5.14.5",
    "@shopify/restyle": "^1.4.0",
    "@tamagui/core": "^1.0.0-alpha.39",
    "@unimodules/core": "~7.2.0",
    "expo": "^43.0.3",
    "expo-av": "~10.2.0",
    "expo-camera": "~12.1.2",
    "expo-crypto": "~10.1.1",
    "expo-dev-client": "~0.8.4",
    "expo-device": "~4.1.0",
    "expo-file-system": "~13.1.2",
    "expo-linear-gradient": "~11.0.0",
    "expo-location": "~14.0.1",
    "expo-notifications": "~0.14.0",
    "expo-secure-store": "~11.1.0",
    "expo-splash-screen": "^0.14.1",
    "expo-status-bar": "~1.2.0",
    "expo-task-manager": "~10.1.0",
    "expo-updates": "~0.11.6",
    "form-data": "^4.0.0",
    "geolib": "^3.3.3",
    "graphql": "^15.7.2",
    "graphql-ws": "^5.5.5",
    "pinar": "^0.12.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hook-form": "^6.8.3",
    "react-native": "0.64.3",
    "react-native-appearance": "~0.3.3",
    "react-native-dotenv": "^3.3.1",
    "react-native-gesture-handler": "~2.1.0",
    "react-native-image-viewing": "^0.2.1",
    "react-native-keyboard-aware-scroll-view": "^0.9.5",
    "react-native-maps": "0.29.4",
    "react-native-parsed-text": "^0.0.22",
    "react-native-reanimated": "~2.3.1",
    "react-native-safe-area-context": "3.3.2",
    "react-native-screens": "~3.10.1",
    "react-native-svg": "12.1.1",
    "react-native-web": "0.17.1",
    "react-relay": "^11.0.2",
    "recoil": "^0.4.0",
    "relay-runtime": "^12.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@tamagui/babel-plugin": "^1.0.0-alpha.39",
    "@types/babel__core": "^7.1.15",
    "@types/debug": "^4.1.7",
    "@types/prettier": "^2.4.1",
    "@types/react": "~17.0.21",
    "@types/react-dom": "17.0.1",
    "@types/react-native": "~0.64.12",
    "@types/react-native-dotenv": "^0.2.0",
    "@types/react-native-maps": "0.24.2",
    "@types/react-relay": "^11.0.2",
    "@types/relay-compiler": "^8.0.2",
    "@types/relay-runtime": "^12.0.2",
    "babel-eslint": "^10.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-relay": "^12.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-react-native": "^3.11.0",
    "eslint-plugin-relay": "^1.8.3",
    "expo-cli": "^5.0.3",
    "prettier": "^2.3.2",
    "react-native-svg-transformer": "^1.0.0",
    "relay-compiler": "^12.0.0",
    "relay-compiler-language-typescript": "^14.3.0",
    "typescript": "~4.3.5",
    "typesync": "^0.8.0"
  }
}
